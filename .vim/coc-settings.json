{
    "diagnostic.refreshOnInsertMode": true,
    "languageserver": {
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": ["cs"],
            "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        },
        "buf-ls": {
            "command": "bufls",
            "args": ["serve"],
            "filetypes": ["proto"],
            "rootPatterns": [".git"]
        }
    },
    "workspace.ignoredFolders": [
      "$HOME",
      "$HOME/.cargo/**",
      "$HOME/.rustup/**"
    ],
    "rust-analyzer.completion.callable.snippets": "add_parentheses"
}
