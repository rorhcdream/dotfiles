{
    "suggest.noselect": true,
    "languageserver": {
        "csharp-ls": {
            "command": "csharp-ls",
            "filetypes": ["cs"],
            "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
        },
        "buf-ls": {
            "command": "bufls",
            "args": ["serve"],
            "filetypes": ["proto"],
            "rootPatterns": [".git"]
        }
    }
}
